<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NeRecipeProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.NeRecipeProject.Popup" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.NeRecipeProject.AppBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NeRecipeProject.NoActionBar">
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.NeRecipeProject.Text" parent="@android:style/TextAppearance">
        <item name="android:typeface">serif</item>
    </style>

    <style name="TextAppearance.NeRecipeProject.Text.RecipeCard">
        <item name="android:textSize">@dimen/recipe_card</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.NeRecipeProject.Text.RecipeStepTitle">
        <item name="android:textSize">@dimen/recipe_step_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.NeRecipeProject.Text.RecipeStepText">
        <item name="android:textSize">@dimen/recipe_step_text</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Widget.NeRecipeProjectTheme.OptionsButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/black</item>
        <item name="rippleColor">@color/white</item>
        <item name="iconPadding">0dp</item>
        <item name="minHeight">@dimen/button_min_size</item>
        <item name="minWidth">@dimen/button_min_size</item>
    </style>

    <style name="Widget.NeRecipeProjectTheme.FavoriteButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/favorite_selector</item>
        <item name="rippleColor">@color/white</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="minHeight">@dimen/button_min_size</item>
        <item name="minWidth">@dimen/button_min_size</item>
    </style>

    <style name="Widget.NeRecipeProjectTheme.SelectImageButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:elevation">@dimen/button_select_image_elevation</item>
        <item name="android:textAppearance">
            @style/TextAppearance.NeRecipeProject.Text.RecipeStepTitle
        </item>
        <item name="android:textColor">@color/cardview_dark_background</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="minHeight">@dimen/button_min_size</item>
        <item name="minWidth">@dimen/button_min_size</item>
    </style>

    <style name="Widget.NeRecipeProjectTheme.NewStepButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">?attr/colorControlNormal</item>
        <item name="android:elevation">@dimen/button_select_image_elevation</item>
        <item name="iconPadding">0dp</item>
        <item name="enforceTextAppearance">false</item>
        <item name="minHeight">@dimen/button_min_size</item>
        <item name="minWidth">@dimen/button_min_size</item>
    </style>
</resources>